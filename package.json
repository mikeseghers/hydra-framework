{
  "name": "@mikeseghers/hydra",
  "version": "1.0.0",
  "description": "A lightweight dependency injection and component management framework for TypeScript web applications.",
  "license": "MIT",
  "author": "Mike Seghers",
  "type": "module",
  "workspaces": [
    "examples/*"
  ],
  "main": "./dist/hydra.umd.js",
  "module": "./dist/hydra.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/hydra.es.js",
      "require": "./dist/hydra.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "dependency-injection",
    "component",
    "framework",
    "typescript",
    "hydra"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mikeseghers/hydra-framework.git"
  },
  "bugs": {
    "url": "https://github.com/mikeseghers/hydra-framework/issues"
  },
  "homepage": "https://github.com/mikeseghers/hydra-framework#readme",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "peerDependencies": {
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^27.4.0",
    "rxjs": "^7.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
